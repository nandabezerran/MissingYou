        android:layout_gravity="center"
        android:text="EU LEVEI A PESSOA A UMA DELEGACIA" />

    <Button
        android:id="@+id/button_esta_com_pessoa"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
